@model DiyetisyenGultenManav.Entities.Diet

@{
    ViewBag.Title = "DİYET DETAYI";
}
<link href="~/Content/new-login-style-diyet.css" rel="stylesheet" />

<style>
    .vertical-strech {
        height: 100vh;
    }
</style>
<div class="login-block pl-5 pt-3 mr-0 vertical-strech">
    <div class="row pl-5 pt-3 mr-0">
        <div class="col-md-12">
            <p class="display-4 text-center font-weight-bold">
                @ViewBag.Title
            </p>
        </div>
    </div>
    <div class="row pl-3 mr-0">
        <div class="col-md-10">
            <div>
                <dl class="row">
                    <dt class="col-md-3">
                        @Html.DisplayNameFor(model => model.Owner.Username)
                    </dt>

                    <dd class="col-md-9">
                        @Html.DisplayFor(model => model.Owner.Username)
                    </dd>
                    <dt class="col-md-3">
                        @Html.DisplayNameFor(model => model.Title)
                    </dt>
                    <dd class="col-md-9">
                        @Html.DisplayFor(model => model.Title)
                    </dd>
                    <dt class="col-md-3">
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>
                    <dd class="col-md-9">
                        @Html.DisplayFor(model => model.Description)
                    </dd>
                    <dt class="col-md-3">
                        @Html.DisplayNameFor(model => model.Text)
                    </dt>
                    <dd class="col-md-9">
                        @Html.DisplayFor(model => model.Text)
                    </dd>
                    <dt class="col-md-3">
                        @Html.DisplayNameFor(model => model.IsNew)
                    </dt>

                    <dd class="col-md-9">
                        @if (Model.IsNew)
                        {
                            <i class="fa fa-check text-warning"></i>
                        }
                        else
                        {
                            <i class="fa fa-times text-danger"></i>
                        }
                        @*  @Html.DisplayFor(model => model.IsDraft)*@
                    </dd>
                    <dt class="col-md-3">
                        @Html.DisplayNameFor(model => model.CreatedOn)
                    </dt>
                    <dd class="col-md-9">
                        @Html.DisplayFor(model => model.CreatedOn)
                    </dd>
                    <dt class="col-md-3">
                        @Html.DisplayNameFor(model => model.ModifiedOn)
                    </dt>
                    <dd class="col-md-9">
                        @Html.DisplayFor(model => model.ModifiedOn)
                    </dd>
                    <dt class="col-md-3">
                        @Html.DisplayNameFor(model => model.ModifiedUsername)
                    </dt>
                    <dd class="col-md-9">
                        @Html.DisplayFor(model => model.ModifiedUsername)
                    </dd>
                </dl>
            </div>
        </div>
        <div class="col-md-10 pl-3">
            <p>
                @Bootstrap.LinkButton("/Diet/AllDiet", "secondary", string.Empty,
               string.Empty, "arrow-left", "Geri Dön!")
                @Bootstrap.LinkButton("/Diet/Edit/" + Model.Id, "warning", string.Empty,
               string.Empty, "edit", "Düzenle")

            </p>
        </div>
    </div>
</div>