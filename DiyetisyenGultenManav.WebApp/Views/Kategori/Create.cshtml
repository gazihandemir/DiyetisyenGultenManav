@model DiyetisyenGultenManav.Entities.Kategori

@{
    ViewBag.Title = "KATEGORİ OLUŞTUR";
}
<style>
    .sayfaArkaPlan {
        /*background: #DE6262;*/ /* fallback for old browsers */
        /*background: -webkit-linear-gradient(to right, #FFB88C, #DE6262);*/ /* Chrome 10-25, Safari 5.1-6 */
        /*background: linear-gradient(to right, #FFB88C, #DE6262);*/ /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        /*        background-color: rgba(222, 98, 98, 0.5);*/
        background: rgba(215, 189, 226, 0.7);
        background: -webkit-linear-gradient(to right, rgba(215,189,226,0.8), rgba(155, 89, 182, 0.7));
        background: linear-gradient(to right, rgba(215,189,226,0.8), rgba(155, 89, 182, 0.7));
        min-height: 1000px;
        height: 100%;
        min-width: 100%;
    }
</style>
<link href="~/Content/validation-summary.css" rel="stylesheet" />
<div class="sayfaArkaPlan pl-5 pt-3 mr-0 ">
    <div class="row pl-5 pt-3 mr-0">
        <div class="col-md-12">
            <p class="display-4 text-center font-weight-bold">
                @ViewBag.Title
            </p>
        </div>
    </div>

    <div class="row pl-5 mr-0">
        <div class="col-md-10">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class=" form-group row">
                    <div class="col-md-12 pr-0">
                        @Html.ValidationSummary(false)
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "col-form-label font-weight-bold col-md-2" })
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control col-md-10" } })
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "col-form-label font-weight-bold col-md-2" })
                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control col-md-10" } })
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => model.Icon, htmlAttributes: new { @class = "col-form-label font-weight-bold col-md-2" })
                    @Html.EditorFor(model => model.Icon, new { htmlAttributes = new { @class = "form-control col-md-10" ,placeholder="Ör : List"} })
                </div>
                <div class="form-group row">
                    <div class="col-md-12 pr-0 text-right">
                        <button class="btn btn-outline-light pull-left" type="button" data-toggle="collapse" data-target=".multi-collapse" aria-expanded="false" aria-controls="multiCollapseExample1 multiCollapseExample2">Sayfa Açıklaması</button>
                        @Bootstrap.LinkButton("/Kategori/Index", "secondary", string.Empty,
                 string.Empty, "arrow-left", " Geri Dön")
                        @Bootstrap.Button("success", string.Empty, "submit", "plus-circle", " Oluştur")
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="col-md-12 text-right">
        @*<p>
                <button class="btn btn-outline-dark" type="button" data-toggle="collapse" data-target=".multi-collapse" aria-expanded="false" aria-controls="multiCollapseExample1 multiCollapseExample2">Sayfa Açıklaması</button>
            </p>*@
        <div class="row">
            <div class="col">
                <div class="collapse multi-collapse" id="multiCollapseExample1">
                    <div class="card card-body text-left sayfaArkaPlan pl-4" style="min-height:100%;">
                        <ul>
                            <b>Blog Yazısı Ekle Sayfasında</b>
                            <li>Başlık*</li>
                            <li>Açıklama</li>
                            <li>İkon (fontawesome)</li>
                            Oluşturabilirsiniz.
                        </ul>
                        <hr />
                        <p>
                            Kategori Oluşturmak İçin  Oluştur Butonuna Tıklayınız.<br />
                            Kategoriler Sayfasına Dönmek İçin Geri Dön Butonuna Tıklayınız.<br />
                        </p>
                        <hr />
                        <p>
                            Beklenmedik Bir Durum Halinde  İletişime geçiniz : Gazihand@gmail.com
                        </p>
                        <hr />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>