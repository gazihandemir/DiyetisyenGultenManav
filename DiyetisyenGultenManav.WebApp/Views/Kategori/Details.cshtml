@model DiyetisyenGultenManav.Entities.Kategori
@{
    ViewBag.Title = "KATEGORİ DETAYI";
}
<style>
    .sayfaArkaPlan {
        /*background: #DE6262;*/ /* fallback for old browsers */
        /*background: -webkit-linear-gradient(to right, #FFB88C, #DE6262);*/ /* Chrome 10-25, Safari 5.1-6 */
        /*background: linear-gradient(to right, #FFB88C, #DE6262);*/ /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        /*        background-color: rgba(222, 98, 98, 0.5);*/
        background: rgba(215, 189, 226, 0.7);
        background: -webkit-linear-gradient(to right, rgba(215,189,226,0.8), rgba(155, 89, 182, 0.7));
        background: linear-gradient(to right, rgba(215,189,226,0.8), rgba(155, 89, 182, 0.7));
        min-height: 1000px;
        height: 100%;
        min-width: 100%;
    }
</style>
<div class="sayfaArkaPlan pl-5 pt-3 mr-0 ">
    <div class="row pl-5 pt-3 mr-0">
        <div class="col-md-12">
            <p class="display-4 text-center font-weight-bold">
                @ViewBag.Title
            </p>
        </div>
    </div>

    <div class="row pl-3 mr-0">
        <div class="col-md-10">
            <div>
                <dl class="row">
                    <dt class="col-md-3">
                        @Html.DisplayNameFor(model => model.Title)
                    </dt>

                    <dd class="col-md-9">
                        @Html.DisplayFor(model => model.Title)
                    </dd>

                    <dt class="col-md-3">
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>

                    <dd class="col-md-9">
                        @Html.DisplayFor(model => model.Description)
                    </dd>
                    <dt class="col-md-3">
                        @Html.DisplayNameFor(model => model.Icon)
                    </dt>

                    <dd class="col-md-9">
                        @Html.DisplayFor(model => model.Icon)
                    </dd>
                    <dt class="col-md-3">
                        @Html.DisplayNameFor(model => model.CreatedOn)
                    </dt>

                    <dd class="col-md-9">
                        @Html.DisplayFor(model => model.CreatedOn)
                    </dd>

                    <dt class="col-md-3">
                        @Html.DisplayNameFor(model => model.ModifiedOn)
                    </dt>

                    <dd class="col-md-9">
                        @Html.DisplayFor(model => model.ModifiedOn)
                    </dd>

                    <dt class="col-md-3">
                        @Html.DisplayNameFor(model => model.ModifiedUsername)
                    </dt>

                    <dd class="col-md-9">
                        @Html.DisplayFor(model => model.ModifiedUsername)
                    </dd>

                </dl>
            </div>
        </div>
        <div class="col-md-10 pl-3">
            <p>
                @Bootstrap.LinkButton("/Kategori/Index", "secondary", string.Empty,
                string.Empty, "arrow-left", " Geri Dön")
                @Bootstrap.LinkButton("/Kategori/Edit/" + Model.Id, "warning", string.Empty,
             string.Empty, "edit", " Düzenle")

            </p>
        </div>
    </div>
</div>