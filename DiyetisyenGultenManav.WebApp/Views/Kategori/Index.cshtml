@model IEnumerable<DiyetisyenGultenManav.Entities.Kategori>
@using DiyetisyenGultenManav.WebApp
   
@{
    ViewBag.Title = "Kategoriler";
}

<h2>Index</h2>

<p>
    @Bootstrap.LinkButton("/Kategori/Create", "info", string.Empty, string.Empty, "plus", " Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedOn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModifiedOn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModifiedUsername)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifiedOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifiedUsername)
            </td>
            <td>
                @Bootstrap.LinkButton("/Kategori/Edit/" + @item.Id, "warning", "btn-xs", "Edit", "edit", string.Empty)
                @Bootstrap.LinkButton("/Kategori/Details/" + @item.Id, "info", "btn-xs", "Details", "search", string.Empty)
                @Bootstrap.LinkButton("/Kategori/Delete/" + @item.Id, "danger", "btn-xs", "Delete", "trash", string.Empty)
            </td>
        </tr>
    }
</table>
