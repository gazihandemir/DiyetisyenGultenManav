@model IEnumerable<DiyetisyenGultenManav.Entities.PaketTalebi>

@{
    ViewBag.Title = "PAKET TALEPLERİ";
}
<style>
    .sayfaArkaPlan {
        /*background: #DE6262;*/ /* fallback for old browsers */
        /*background: -webkit-linear-gradient(to right, #FFB88C, #DE6262);*/ /* Chrome 10-25, Safari 5.1-6 */
        /*background: linear-gradient(to right, #FFB88C, #DE6262);*/ /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        /*        background-color: rgba(222, 98, 98, 0.5);*/
        background: rgba(215, 189, 226, 0.7);
        background: -webkit-linear-gradient(to right, rgba(215,189,226,0.8), rgba(155, 89, 182, 0.7));
        background: linear-gradient(to right, rgba(215,189,226,0.8), rgba(155, 89, 182, 0.7));
        min-height: 1000px;
        height: 100%;
        min-width: 100%;
    }
</style>
<div class="sayfaArkaPlan mr-0 ">
    <div class=" row pl-5 pt-3 mr-0">
        <div class="col-md-12">
            <p class="display-4 text-center font-weight-bold">
                @ViewBag.Title
            </p>
        </div>
    </div>
    <div class="row pl-3 mr-0  ">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6 pr-0 text-left">
                    @Bootstrap.LinkButton("/PaketTalebi/Create", "primary", "btn-sm", string.Empty, "plus", "Yeni Paket Talebi Ekle")
                </div>
                <div class="col-md-6  text-right">
                    @using (Html.BeginForm())
                    {
                        <input class="text-box btn btn-outline-light text-left" id="ara" name="ara" type="text" placeholder="Ara" />
                    }
                </div>
            </div>
            <br />
            <table class="table table-hover table-striped table-sm small">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.IsimSoyisim)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TelefonNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Program.Isim)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EkAciklamalar)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsimSoyisim)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TelefonNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Program.Isim)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EkAciklamalar)
                        </td>
                        <td width="150" class="text-right">
                            @Bootstrap.LinkButton("/PaketTalebi/Edit/" + item.Id, "warning", "btn-sm", "Edit", "edit", string.Empty)
                            @Bootstrap.LinkButton("/PaketTalebi/Details/" + item.Id, "info", "btn-sm", "Details", "search", string.Empty)
                            @Bootstrap.LinkButton("/PaketTalebi/Delete/" + item.Id, "danger", "btn-sm", "Delete", "trash", string.Empty)
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>