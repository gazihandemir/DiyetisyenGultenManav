@model IEnumerable<DiyetisyenGultenManav.Entities.Paket>
@{
    ViewBag.Title = "Paketler";
}
<div class="mr-0 " style="background: #aed6f1;height: 2000px;
    ">
    <div class=" row pl-5 pt-3 mr-0">
        <div class="col-md-12">
            <p class="display-4 text-center font-weight-bold">
                @ViewBag.Title
            </p>
        </div>
    </div>
    <div class="row pl-3 mr-0  ">
        <div class="col-md-12">
            <!--oluştur ve ara -->
            <div class="row">
                <div class="col-md-6 pr-0 text-left">
                    @Bootstrap.LinkButton("/Paket/Create", "primary", "btn-sm", string.Empty, "plus", "Yeni PaketEkle")
                </div>
                <div class="col-md-6  text-right">
                    @using (Html.BeginForm())
                    {
                        <input class="text-box btn btn-outline-light text-left" id="ara" name="ara" type="text" placeholder="Ara" />
                    }
                </div>
            </div>
            <br />
            <table class="table table-hover table-striped table-sm small">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Isim)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Fiyat)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Süresi)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OzellikBirRed)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OzellikBir)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OzellikIkiRed)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OzellikIki)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OzellikUcRed)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OzellikUc)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Renk)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RenkButton)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Aciklama)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Isim)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Fiyat)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Süresi)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OzellikBirRed)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OzellikBir)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OzellikIkiRed)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OzellikIki)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OzellikUcRed)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OzellikUc)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Renk)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RenkButton)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Aciklama)
                        </td>
                        <td width="150" class="text-right">
                            @Bootstrap.LinkButton("/Paket/Edit/" + item.Id, "warning", "btn-sm", "Edit", "edit", string.Empty)
                            @Bootstrap.LinkButton("/Paket/Details/" + item.Id, "info", "btn-sm", "Details", "search", string.Empty)
                            @Bootstrap.LinkButton("/Paket/Delete/" + item.Id, "danger", "btn-sm", "Delete", "trash", string.Empty)
                        </td>
                    </tr>
                }

            </table>
        </div>

    </div>
</div>
