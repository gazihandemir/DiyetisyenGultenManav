@using DiyetisyenGultenManav.Entities.ValueObjects
@model HomeViewModel

<link href="~/Content/kahve.css" rel="stylesheet" />
@foreach (var kahve in Model.Kahveler)
{
<section class="stat" id="stats" style="background-color:@kahve.ArkaPlanRengi">
    <div class="content-box">
        <br><br>
        <div class="container" style="background-color:">
            <div class="row text-center">
                <div class="col-md-3">
                    <!--View-->
                    <div class="stat-items">
                        <i class="fa @kahve.Ikon" style="color:@kahve.IkonRengi;font-size:@(kahve.IkonBoyutu)px;"></i>
                        <h2>
                            <b class="counter text-center" style="color:@kahve.SayiRengi;font-size:@(kahve.SayiBoyutu)px;">@kahve.Sayi</b>
                        </h2>
                        <p style="color:@kahve.YaziRengi;font-size:@(kahve.YaziBoyutu)px;">@kahve.Yazi</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>}
