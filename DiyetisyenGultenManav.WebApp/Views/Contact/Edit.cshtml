@model DiyetisyenGultenManav.Entities.Contact

@{
    ViewBag.Title = "İletişim Düzenle";
}
<link href="~/Content/new-login-style-kategori.css" rel="stylesheet" />
<link href="~/Content/validation-summary.css" rel="stylesheet" />
<style>
    .sayfaDüzeniPaketTalebi {
        height: 100%;
        min-height: 1000px;
    }
</style>
<div class="login-block pl-5 pt-3 mr-0 sayfaDüzeniPaketTalebi">
    <div class="row pl-5 pt-3 mr-0">
        <div class="col-md-12">
            <p class="display-4 text-center font-weight-bold">
                @ViewBag.Title
            </p>
        </div>
    </div>
    <div class="row pl-5 mr-0">
        <div class="col-md-10">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class=" form-group row">
                    <div class="col-md-12 pr-0">
                        @Html.ValidationSummary(false)
                        @Html.HiddenFor(model => model.ID)
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.IsimSoyisim, htmlAttributes: new { @class = "col-form-label font-weight-bold col-md-2" })
                    @Html.EditorFor(model => model.IsimSoyisim, new { htmlAttributes = new { @class = "form-control col-md-10" } })
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.TelefonNumarasi, htmlAttributes: new { @class = "col-form-label font-weight-bold col-md-2" })
                    @Html.EditorFor(model => model.TelefonNumarasi, new { htmlAttributes = new { @class = "form-control col-md-10" } })
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-form-label font-weight-bold col-md-2" })
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control col-md-10" } })
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.Konu, htmlAttributes: new { @class = "col-form-label font-weight-bold col-md-2" })
                    @Html.EditorFor(model => model.Konu, new { htmlAttributes = new { @class = "form-control col-md-10" } })
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => model.Mesaj, htmlAttributes: new { @class = "col-form-label font-weight-bold col-md-2" })
                    @Html.TextAreaFor(model => model.Mesaj, 5, 140, new { htmlAttributes = new { @class = "form-control col-md-10" } })
                </div>

                <div class="form-group row">
                    <div class="col-md-12 pr-0 text-right">
                        @Bootstrap.LinkButton("/Contact/Index", "secondary", string.Empty,
                  string.Empty, "arrow-left", "Geri Dön !")
                        @Bootstrap.Button("success", string.Empty, "submit", "save", " Kaydet")
                    </div>
                </div>
            }

        </div>
    </div>
</div>