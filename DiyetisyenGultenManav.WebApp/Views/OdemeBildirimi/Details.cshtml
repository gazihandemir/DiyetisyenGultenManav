@model DiyetisyenGultenManav.Entities.OdemeBildirimi

@{
    ViewBag.Title = "ÖDEME BİLDİRİMİ DETAYI";
}
    <style>
        .sayfaArkaPlan {
            /*background: #DE6262;*/ /* fallback for old browsers */
            /*background: -webkit-linear-gradient(to right, #FFB88C, #DE6262);*/ /* Chrome 10-25, Safari 5.1-6 */
            /*background: linear-gradient(to right, #FFB88C, #DE6262);*/ /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
            /*        background-color: rgba(222, 98, 98, 0.5);*/
            background: rgba(222, 98, 98, 0.7);
            background: -webkit-linear-gradient(to right, rgba(255,184,140,0.8), rgba(222, 98, 98, 0.7));
            background: linear-gradient(to right, rgba(255,184,140,0.8), rgba(222, 98, 98, 0.7));
            min-height: 1000px;
            height: 100%;
            min-width: 100%;
        }
    </style>
<div class="sayfaArkaPlan pl-5 pt-3 mr-0 ">
    <div class="row pl-5 pt-3 mr-0">
        <div class="col-md-12">
            <p class="display-4 text-center font-weight-bold">
                @ViewBag.Title
            </p>
        </div>
    </div>

    <div class="row pl-3 mr-0">
        <div class="col-md-10">
            <div>
                <dl class="row">
                    <dt class="col-md-3">
                        @Html.DisplayNameFor(model => model.Owner.Username)
                    </dt>
                    <dd class="col-md-9">
                        @Html.DisplayFor(model => model.Owner.Username)
                    </dd>
                    <dt class="col-md-3">
                        @Html.DisplayNameFor(model => model.IsimSoyisim)
                    </dt>

                    <dd class="col-md-9">
                        @Html.DisplayFor(model => model.IsimSoyisim)
                    </dd>

                    <dt class="col-md-3">
                        @Html.DisplayNameFor(model => model.BankaIsmi)
                    </dt>

                    <dd class="col-md-9">
                        @Html.DisplayFor(model => model.BankaIsmi)
                    </dd>

                    <dt class="col-md-3">
                        @Html.DisplayNameFor(model => model.YatirilanMiktar)
                    </dt>

                    <dd class="col-md-9">
                        @Html.DisplayFor(model => model.YatirilanMiktar)
                    </dd>

                    <dt class="col-md-3">
                        @Html.DisplayNameFor(model => model.TelefonNo)
                    </dt>

                    <dd class="col-md-9">
                        @Html.DisplayFor(model => model.TelefonNo)
                    </dd>

                    <dt class="col-md-3">
                        @Html.DisplayNameFor(model => model.EkAciklamalar)
                    </dt>

                    <dd class="col-md-9">
                        @Html.DisplayFor(model => model.EkAciklamalar)
                    </dd>

                    <dt class="col-md-3">
                        @Html.DisplayNameFor(model => model.IsNotification)
                    </dt>

                    <dd class="col-md-9">
                        @if (Model.IsNotification)
                        {
                            <i class="fa fa-check text-success"></i>
                        }
                        else
                        {
                            <i class="fa fa-times text-danger"></i>
                        }
                        @*  @Html.DisplayFor(model => model.IsNotification)*@
                    </dd>

                    <dt class="col-md-3">
                        @Html.DisplayNameFor(model => model.IsPay)
                    </dt>

                    <dd class="col-md-9">
                        @if (Model.IsPay)
                        {
                            <i class="fa fa-check text-success"></i>
                        }
                        else
                        {
                            <i class="fa fa-times text-danger"></i>
                        }
                        @*  @Html.DisplayFor(model => model.IsPay)*@
                    </dd>
                    <dt class="col-md-3">
                        @Html.DisplayNameFor(model => model.IsOkey)
                    </dt>

                    <dd class="col-md-9">
                        @if (Model.IsOkey)
                        {
                            <i class="fa fa-check text-success"></i>
                        }
                        else
                        {
                            <i class="fa fa-times text-danger"></i>
                        }
                        @*  @Html.DisplayFor(model => model.IsOkey)*@
                    <dt class="col-md-3">
                        @Html.DisplayNameFor(model => model.CreatedOn)
                    </dt>
                    <dd class="col-md-9">
                        @Html.DisplayFor(model => model.CreatedOn)
                    </dd>
                    <dt class="col-md-3">
                        @Html.DisplayNameFor(model => model.ModifiedOn)
                    </dt>
                    <dd class="col-md-9">
                        @Html.DisplayFor(model => model.ModifiedOn)
                    </dd>
                    <dt class="col-md-3">
                        @Html.DisplayNameFor(model => model.ModifiedUsername)
                    </dt>
                    <dd class="col-md-9">
                        @Html.DisplayFor(model => model.ModifiedUsername)
                    </dd>
                </dl>
            </div>
        </div>
        <div class="col-md-10 pl-3">
            <p>
                @Bootstrap.LinkButton("/OdemeBildirimi/Index", "secondary", string.Empty,
               string.Empty, "arrow-left", "Geri Dön!")
                @Bootstrap.LinkButton("/OdemeBildirimi/Edit/" + Model.Id, "warning", string.Empty,
               string.Empty, "edit", "Düzenle")
            </p>
        </div>
    </div>
</div>