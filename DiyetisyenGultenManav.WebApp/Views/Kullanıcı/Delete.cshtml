                        </dt>

                        <dd class="col-md-9">
                            @Html.DisplayFor(model => model.ActivateGuid)
                        </dd>

                        <dt class="col-md-3">
                            @Html.DisplayNameFor(model => model.IsActive)
                        </dt>

                        <dd class="col-md-9">
                            @if (Model.IsActive)
                            {
                                <i class="fa fa-check text-success"></i>
                            }
