                            @Html.DisplayFor(model => model.Hastalik)
                        </dd>
                        <dt class="col-md-3">
                            @Html.DisplayNameFor(model => model.Tahlil)
                        </dt>

                        <dd class="col-md-9">
                            @Html.DisplayFor(model => model.Tahlil)
                        </dd>
                        <dt class="col-md-3">
                            @Html.DisplayNameFor(model => model.Hikaye)
                        </dt>

                        <dd class="col-md-9">
