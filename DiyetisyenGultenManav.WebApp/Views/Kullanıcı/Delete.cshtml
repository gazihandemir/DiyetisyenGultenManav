@model DiyetisyenGultenManav.Entities.Kullanıcı

@{
    ViewBag.Title = "KULLANICI SİL";
}
    <style>
        .sayfaArkaPlan {
            /*background: #DE6262;*/ /* fallback for old browsers */
            /*background: -webkit-linear-gradient(to right, #FFB88C, #DE6262);*/ /* Chrome 10-25, Safari 5.1-6 */
            /*background: linear-gradient(to right, #FFB88C, #DE6262);*/ /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
            /*        background-color: rgba(222, 98, 98, 0.5);*/
            background: rgba(215, 189, 226, 0.7);
            background: -webkit-linear-gradient(to right, rgba(174, 214, 241,0.8), rgba(52, 152, 219, 0.7));
            background: linear-gradient(to right, rgba(174, 214, 241,0.8), rgba(52, 152, 219, 0.7));
            min-height: 1000px;
            height: 100%;
            min-width: 100%;
        }
    </style>
    <div class="sayfaArkaPlan pl-2 mr-0">
        @if (Request.Browser.IsMobileDevice)
        {
            <div class="row pl-5 pt-3 mr-0">
                <div class="col-md-12">
                    <p class="text-center font-weight-bold">
                        @ViewBag.Title
                    </p>
                </div>
            </div>
        }
        else
        {
            <div class="row pl-5 pt-3 mr-0">
                <div class="col-md-12">
                    <p class="display-4 text-center font-weight-bold">
                        @ViewBag.Title
                    </p>
                </div>
            </div>
        }
        <div class="row pl-3 mr-0">
            <div class="col-md-10">
                <div>
                    <dl class="row">
                        <dt class="col-md-3">
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>

                        <dd class="col-md-9">
                            @Html.DisplayFor(model => model.Name)
                        </dd>

                        <dt class="col-md-3">
                            @Html.DisplayNameFor(model => model.Surname)
                        </dt>

                        <dd class="col-md-9">
                            @Html.DisplayFor(model => model.Surname)
                        </dd>

                        <dt class="col-md-3">
                            @Html.DisplayNameFor(model => model.Username)
                        </dt>

                        <dd class="col-md-9">
                            @Html.DisplayFor(model => model.Username)
                        </dd>

                        <dt class="col-md-3">
                            @Html.DisplayNameFor(model => model.Email)
                        </dt>

                        <dd class="col-md-9">
                            @Html.DisplayFor(model => model.Email)
                        </dd>

                        <dt class="col-md-3">
                            @Html.DisplayNameFor(model => model.Password)
                        </dt>

                        <dd class="col-md-9">
                            @Html.DisplayFor(model => model.Password)
                        </dd>

                        <dt class="col-md-3">
                            @Html.DisplayNameFor(model => model.DogumTarihi)
                        </dt>

                        <dd class="col-md-9">
                            @Html.DisplayFor(model => model.DogumTarihi)
                        </dd>

                        <dt class="col-md-3">
                            @Html.DisplayNameFor(model => model.TelefonNumarası)
                        </dt>

                        <dd class="col-md-9">
                            @Html.DisplayFor(model => model.TelefonNumarası)
                        </dd>

                        <dt class="col-md-3">
                            @Html.DisplayNameFor(model => model.Boy)
                        </dt>

                        <dd class="col-md-9">
                            @Html.DisplayFor(model => model.Boy)
                        </dd>

                        <dt class="col-md-3">
                            @Html.DisplayNameFor(model => model.Kilo)
                        </dt>

                        <dd class="col-md-9">
                            @Html.DisplayFor(model => model.Kilo)
                        </dd>

                        <dt class="col-md-3">
                            @Html.DisplayNameFor(model => model.Meslek)
                        </dt>

                        <dd class="col-md-9">
                            @Html.DisplayFor(model => model.Meslek)
                        </dd>

                        <dt class="col-md-3">
                            @Html.DisplayNameFor(model => model.Sehir)
