@model IEnumerable<DiyetisyenGultenManav.Entities.Kullanıcı>

@{
    ViewBag.Title = "KULLANICI LİSTESİ";
}
    <style>
        .sayfaArkaPlan {
            /*background: #DE6262;*/ /* fallback for old browsers */
            /*background: -webkit-linear-gradient(to right, #FFB88C, #DE6262);*/ /* Chrome 10-25, Safari 5.1-6 */
            /*background: linear-gradient(to right, #FFB88C, #DE6262);*/ /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
            /*        background-color: rgba(222, 98, 98, 0.5);*/
            background: rgba(215, 189, 226, 0.7);
            background: -webkit-linear-gradient(to right, rgba(174, 214, 241,0.8), rgba(52, 152, 219, 0.7));
            background: linear-gradient(to right, rgba(174, 214, 241,0.8), rgba(52, 152, 219, 0.7));
            min-height: 1000px;
            height: 100%;
            min-width: 100%;
        }
    </style>
<div class="sayfaArkaPlan pl-2 mr-0">
    <div class="row  pt-3 mr-0">
        <div class="col-md-12">
            <p class="display-4 text-center font-weight-bold">
                @ViewBag.Title
            </p>
        </div>
    </div>
    <div class="row  mr-0">
        <div class="col-md-12 vertical-strech">
            <div class="row">
                <div class="col-md-6 pr-0 text-left">
                    @Bootstrap.LinkButton("/Kullanıcı/Create", "primary", "btn-sm", string.Empty, "plus", "Yeni Kullanıcı Ekle")
                </div>
                <div class="col-md-6  text-right">
                    @using (Html.BeginForm())
                    {
                        <input class="text-box btn btn-outline-light text-left" id="ara" name="ara" type="text" placeholder="Ara">
                    }
                </div>
            </div>
            <br />
            <table class="table table-hover table-striped table-sm small">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Surname)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Username)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Password)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DogumTarihi)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TelefonNumarası)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Boy)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Kilo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Meslek)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Sehir)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsActive)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsAdmin)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsOnline)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsNormal)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsPayOnline)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Surname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Username)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Password)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DogumTarihi)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TelefonNumarası)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Boy)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Kilo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Meslek)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sehir)
                        </td>
                        <td class="text-center">
                            @if (item.IsActive)
                            {
                                <i class="fa fa-check text-success"></i>
                            }
                            else
                            {
                                <i class="fa fa-times text-danger"></i>
                            }
                        </td>
                        <td class="text-center">
                            @if (item.IsAdmin)
                            {
                                <i class="fa fa-check text-success"></i>
                            }
                            else
                            {
                                <i class="fa fa-times text-danger"></i>
                            }
                        </td>
                        <td class="text-center">
                            @if (item.IsOnline)
                            {
                                <i class="fa fa-check text-success"></i>
                            }
                            else
                            {
                                <i class="fa fa-times text-danger"></i>
                            }
                        </td>
                        <td class="text-center">
                            @if (item.IsNormal)
                            {
                                <i class="fa fa-check text-success"></i>
                            }
                            else
                            {
                                <i class="fa fa-times text-danger"></i>
                            }
                        </td>
                        <td class="text-center">
                            @if (item.IsPayOnline)
                            {
                                <i class="fa fa-check text-success"></i>
                            }
                            else
                            {
                                <i class="fa fa-times text-danger"></i>
                            }
                        </td>
                        <td width="150" class="text-right">
                            @Bootstrap.LinkButton("/Kullanıcı/Edit/" + item.Id, "warning", "btn-sm", "Edit", "edit", string.Empty)
                            @Bootstrap.LinkButton("/Kullanıcı/Details/" + item.Id, "info", "btn-sm", "Details", "search", string.Empty)
                            @Bootstrap.LinkButton("/Kullanıcı/Delete/" + item.Id, "danger", "btn-sm", "Delete", "trash", string.Empty)
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>