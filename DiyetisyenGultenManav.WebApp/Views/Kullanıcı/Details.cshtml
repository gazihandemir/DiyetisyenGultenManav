@model DiyetisyenGultenManav.Entities.Kullanıcı

@{
    ViewBag.Title = "KULLANICI DETAYI";
}
<link href="~/Content/new-login-style-kullanici.css" rel="stylesheet" />
<style>
    .resim {
        object-fit: fill;
        border: 1px solid black;
        margin-right: 20px;
        width: 256px;
        height: 256px;
    }
</style>
<div class="login-block pl-5 pt-3 mr-0">
    <div class="row pl-5 pt-3 mr-0">
        <div class="col-md-12">
            <p class="display-4 text-center font-weight-bold">
                @ViewBag.Title
