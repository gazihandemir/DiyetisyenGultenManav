                    </dd>

                    <dt class="col-md-3">
                        @Html.DisplayNameFor(model => model.ModifiedOn)
                    </dt>

                    <dd class="col-md-9">
                        @Html.DisplayFor(model => model.ModifiedOn)
                    </dd>

                    <dt class="col-md-3">
                        @Html.DisplayNameFor(model => model.ModifiedUsername)
                    </dt>

                    <dd class="col-md-9">
                        @Html.DisplayFor(model => model.ModifiedUsername)
                    </dd>
                    <dt class="col-md-3">
                        @Html.DisplayNameFor(model => model.ProfileImageFileName)
                    </dt>

                    <dd class="col-md-9">
                        <img src="~/images/@Model.ProfileImageFileName" class="resim img-thumbnail" width="256" height="256" />
                    </dd>
                </dl>
            </div>
        </div>
        <div class="col-md-10 pl-3">
            <p>
                @Bootstrap.LinkButton("/Kullanıcı/Index", "secondary", string.Empty,
               string.Empty, "arrow-left", "Geri Dön!")
                @Bootstrap.LinkButton("/Kullanıcı/Edit/" + Model.Id, "warning", string.Empty,
               string.Empty, "edit", "Düzenle")

            </p>
