        </div>
    </div>
    <div class="row pl-3 mr-0">
        <div class="col-md-10">
            <div>
                <dl class="row">
                    <dt class="col-md-3">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>

                    <dd class="col-md-9">
                        @Html.DisplayFor(model => model.Name)
                    </dd>

                    <dt class="col-md-3">
                        @Html.DisplayNameFor(model => model.Surname)
                    </dt>

                    <dd class="col-md-9">
